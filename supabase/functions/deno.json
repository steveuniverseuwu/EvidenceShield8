{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "imports": {
    "hono": "npm:hono@^3.11.0",
    "hono/cors": "npm:hono@^3.11.0/dist/middleware/cors/index.js",
    "hono/logger": "npm:hono@^3.11.0/dist/middleware/logger/index.js"
  }
}
